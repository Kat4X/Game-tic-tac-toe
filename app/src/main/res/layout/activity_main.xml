<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <TextView
            android:id="@+id/player_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3 X 3"
            android:textColor="@color/colorPrimary"
            android:textSize="36sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/player_text"
            android:text="Player"
            android:textColor="@color/colorPrimary"
            android:textSize="36sp" />
    </RelativeLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:gravity="center">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:id="@+id/cell_1"
                style="@style/TextAppearance.MaterialComponents.Headline1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginEnd="10dp"
                android:backgroundTint="@android:color/holo_blue_dark"
                android:text=""
                android:textAllCaps="true"
                android:textSize="65sp" />

            <Button
                android:id="@+id/cell_2"
                style="@style/TextAppearance.MaterialComponents.Headline1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginEnd="10dp"
                android:backgroundTint="@android:color/holo_blue_dark"
                android:text=""
                android:textAllCaps="true"
                android:textSize="65sp" />

            <Button
                android:id="@+id/cell_3"
                style="@style/TextAppearance.MaterialComponents.Headline1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:backgroundTint="@android:color/holo_blue_dark"
                android:text=""
                android:textAllCaps="true"
                android:textSize="65sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:id="@+id/cell_4"
                style="@style/TextAppearance.MaterialComponents.Headline1"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_marginEnd="10dp"
                android:backgroundTint="@android:color/holo_blue_dark"
                android:text=""
                android:textAllCaps="true"
                android:textSize="65sp" />

            <Button
                android:id="@+id/cell_5"
                style="@style/TextAppearance.MaterialComponents.Headline1"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_marginEnd="10dp"
                android:backgroundTint="@android:color/holo_blue_dark"
                android:text=""
                android:textAllCaps="true"
                android:textSize="65sp" />

            <Button
                android:id="@+id/cell_6"
                style="@style/TextAppearance.MaterialComponents.Headline1"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:backgroundTint="@android:color/holo_blue_dark"
                android:text=""
                android:textAllCaps="true"
                android:textSize="65sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:id="@+id/cell_7"
                style="@style/TextAppearance.MaterialComponents.Headline1"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_marginEnd="10dp"
                android:backgroundTint="@android:color/holo_blue_dark"
                android:text=""
                android:textAllCaps="true"
                android:textSize="65sp" />

            <Button
                android:id="@+id/cell_8"
                style="@style/TextAppearance.MaterialComponents.Headline1"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_marginEnd="10dp"
                android:backgroundTint="@android:color/holo_blue_dark"
                android:text=""
                android:textAllCaps="true"
                android:textSize="65sp" />

            <Button
                android:id="@+id/cell_9"
                style="@style/TextAppearance.MaterialComponents.Headline1"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:backgroundTint="@android:color/holo_blue_dark"
                android:text=""
                android:textAllCaps="true"
                android:textSize="65sp" />

        </TableRow>
    </TableLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/game_remake_button"
        style="@style/TextAppearance.MaterialComponents.Overline"
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:layout_gravity="center|bottom"
        android:backgroundTint="@color/colorPrimary"
        android:text="Exit"
        android:textSize="26sp" />

</LinearLayout>